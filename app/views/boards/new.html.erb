<div class="d-flex align-items-center">
  <h1>問題を投稿する</h1>
  <div class="ml-auto boards_linkBox">
    <a href="/boards" class="btn btn-outline-dark">問題一覧</a>
  </div>
</div>
<%= form_for @board do |f| %>
<div class="form-group">
  <%= f.label :major, '専攻名' %>
  <%= f.text_field :major, class: 'form-control' %>
</div>
<div class="form-gruop">
  <%= f.label :name, '名前' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :body, '問題内容' %>
  <%= f.text_area :body, class: 'form-control', rows: 10 %>
</div>
<%= f.submit '保存', class: 'btn btn-outline-primary' %>
<% end %>

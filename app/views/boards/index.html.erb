<div class="d-flex align-items-center">

  <h1>問題一覧</h1>
  <div class="ml-auto boards_linkBox"></div>
  <a href="/boards/new" class="btn btn-outline-dark">新規作成</a>
</div>
<table class="table table-hover boards_table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>専攻名</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.major %></td>
      <td><%= board.name %></td>
      <td><%= board.title %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
